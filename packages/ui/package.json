{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/components/index.d.ts",
  "files": [
    "dist/.."
  ],
  "exports": {
    ".": {
      "import": "./dist/components/index.mjs",
      "require": "./dist/components/index.js",
      "types": "./dist/components/index.d.ts"
    },
    "./components": {
      "import": "./dist/components/index.mjs",
      "require": "./dist/components/index.js",
      "types": "./dist/components/index.d.ts"
    },
    "./tailwind.css": "./dist/tailwind.css",
    "./types": "./dist/components/index.d.ts"
  },
  "scripts": {
    "build": "tsup && tsc && tailwindcss -i ./src/styles.css -o ./dist/tailwind.css",
    "watch": "tsup --watch && tsc -w",
    "tailwindcss": "tailwindcss -i ./src/styles.css -o ./dist/tailwind.css --watch",
    "test": "vitest --run",
    "lint": "eslint . --max-warnings 0",
    "clean": "rm -rf dist node_modules",
    "docs": "node script.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@repo/build-config": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@repo/tailwind-utils": "workspace:*",
    "@repo/tokens": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@turbo/gen": "^1.12.4",
    "@types/eslint": "^8.56.5",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "globals": "^15.9.0",
    "jsdom": "^24.1.1",
    "react": "^18.2.0",
    "react-docgen-typescript": "^2.2.2",
    "tslib": "^2.6.3",
    "tsup": "^8.1.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.1.0"
  },
  "dependencies": {
    "@headlessui/react": "^2.0.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "install": "^0.13.0",
    "lucide-react": "^0.379.0",
    "react-aria-components": "^1.2.1",
    "tailwind-merge": "^2.3.0",
    "tailwindcss": "^3.4.3",
    "vitest": "^1.6.0"
  }
}
